{
    "name": "iconscript",
    "version": "0.1.0",
    "description": "iconscript, a language for generating SVG icons",
    "type": "module",
    "main": "dist/parser.js",
    "types": "dist/parser.d.ts",
    "exports": {
        ".": {
            "import": "./dist/parser.js",
            "types": "./dist/parser.d.ts"
        }
    },
    "bin": {
        "iconscript": "./dist/cli/generate-svg-wrapper.cjs"
    },
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "format": "prettier --write \"**/*.{js,mjs,ts,css,html}\"",
        "format:check": "prettier --check \"**/*.{js,mjs,ts,css,html}\"",
        "lint:ts": "eslint \"**/*.ts\"",
        "lint:html": "eslint \"**/*.html\"",
        "lint:css": "stylelint \"**/*.css\"",
        "lint": "npm run lint:ts && npm run lint:html && npm run lint:css",
        "test": "tsx test-suite.js",
        "generate": "tsx src/cli/generate-svg.ts",
        "build:cli": "tsx scripts/build-cli.ts",
        "build:lib": "tsc",
        "build:parser": "tsx scripts/build-parser.ts",
        "build:parser:min": "tsx scripts/build-parser.ts --minify",
        "build:ui": "tsx scripts/build-ui.ts",
        "build:ui:min": "tsx scripts/build-ui.ts --minify",
        "build": "npm run generate:grammar && npm run build:lib && npm run build:cli && npm run build:parser:min && npm run build:ui:min",
        "prepublishOnly": "npm run build",
        "generate:grammar": "./scripts/generate-grammar.sh"
    },
    "keywords": [
        "svg",
        "icons",
        "antlr",
        "parser"
    ],
    "author": "Sergey Vartanov",
    "license": "MIT",
    "devDependencies": {
        "@types/node": "^25.0.0",
        "@typescript-eslint/eslint-plugin": "^8.49.0",
        "@typescript-eslint/parser": "^8.49.0",
        "esbuild": "^0.19.0",
        "eslint": "^9.39.1",
        "eslint-plugin-html": "^8.1.3",
        "prettier": "^3.0.0",
        "stylelint": "^16.26.1",
        "stylelint-config-standard": "^39.0.1",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3"
    },
    "dependencies": {
        "antlr4": "^4.13.0",
        "paper": "^0.12.17",
        "paperjs-offset": "^1.0.8"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/enzet/iconscript.git"
    },
    "homepage": "https://github.com/enzet/iconscript",
    "bugs": {
        "url": "https://github.com/enzet/iconscript/issues"
    }
}
